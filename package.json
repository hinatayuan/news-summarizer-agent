{
  "name": "news-summarizer-agent",
  "version": "1.0.0",
  "description": "Real-time news summarizer agent built with Mastra and DeepSeek API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "mastra build",
    "start": "mastra start",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "deploy:staging": "wrangler deploy --env staging",
    "secrets:set": "wrangler secret put DEEPSEEK_API_KEY",
    "secrets:list": "wrangler secret list",
    "db:push": "mastra db push",
    "db:studio": "mastra db studio"
  },
  "keywords": [
    "mastra",
    "ai",
    "agent",
    "news",
    "summarizer",
    "deepseek",
    "cloudflare-workers",
    "wrangler"
  ],
  "author": "HinataYuan",
  "license": "MIT",
  "dependencies": {
    "@mastra/core": "latest",
    "@ai-sdk/openai": "^1.0.32",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2",
    "wrangler": "^3.0.0"
  }
}
